<h1>Add a restaurant</h1>

<div class =container>
<%= simple_form_for [ @restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :category, collection: Restaurant::CATEGORIES  %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>
</div>
